<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawerLayout">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/trip"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/main_text"
                    android:text="Title :"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"


                    android:ems="10"
                    android:hint=""
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/main_text"
                    android:text="City :"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:hint=""
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/main_text"
                    android:text="Plan :"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/plan"
                    android:layout_width="150dp"
                    android:layout_height="40dp"

                    android:gravity="center"
                    android:clickable="true"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/main_text"
                    android:text="~"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/plan2"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/main_text"
                    android:text="Budget: "
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/budget"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:hint=""
                    android:inputType="text" />

                <Spinner

                    android:id="@+id/spinner_money"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/main_text"
                    android:text="Material: "
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/material"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:ems="10"
                    android:hint=""
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/main_text"
                    android:text="Memo: "
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/memo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:ems="10"
                    android:hint=""
                    android:inputType="text" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/image"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_width="140dp"
                    android:layout_height="140dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <CheckBox
                        android:id="@+id/alone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:text="Travel Alone"
                        android:fontFamily="@font/gillsans" />
                    <CheckBox
                        android:id="@+id/friend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:text="Travel with Friend "
                        android:fontFamily="@font/gillsans" />

                    <CheckBox
                        android:id="@+id/family"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:text="Travel with Family "
                        android:fontFamily="@font/gillsans" />



                </LinearLayout>

            </LinearLayout>







            <Button
            android:id="@+id/createPost"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
                android:text="Create Trip "
            android:textSize="28dp"
            android:textColor="#FFF"
            android:fontFamily="@font/gillsansb"
                android:backgroundTint="#5CD1E5"
            android:background="@drawable/rounded_button" />


    </LinearLayout>



</LinearLayout>